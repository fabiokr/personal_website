<%
  links = []
  links << :new if controller.respond_to?(:new)
  links << :edit if action_name == 'show'
%>

<% unless links.empty? %>
  <div class="actions module width_full">
    <% if links.include?(:new) %>
      <span class="icn_new_article"><%= link_to t('admin.new_resource', :resource_name => resource_class.model_name.human), new_resource_path %></span>
    <% end %>
    <% if links.include?(:edit) %>
      <span class="icn_edit_article"><%= link_to t('admin.edit_resource', :resource_name => resource_class.model_name.human), edit_resource_path(resource) %></span>
    <% end %>
  </div>
<% end %>

