<header><h3><%= t('admin.pages.panel') %></h3></header>
<div class="tab_container">
	<table class="data-table" cellspacing="0">
    <thead>
      <tr>
		      <th><%= ManageableContent::Page.human_attribute_name(:title) %></th>
		      <th><%= ManageableContent::Page.human_attribute_name(:locale) %></th>
		      <th><%= ManageableContent::Page.human_attribute_name(:updated_at) %></th>
		      <th><%= t('admin.actions') %></th>
      </tr>
    </thead>
    <tbody>
      <% @pages.each do |page| %>
        <tr>
		      <td><%= page.content(:title) %> (<%= page.key.titleize %>)</td>
		      <td><%= page.locale %></td>
		      <td><%= l(page.updated_at, :format => :short) %></td>
		      <td>
            <%= icon_link_to(:edit, edit_admin_page_path(page)) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

