<article class="module width_quarter">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	  <header><h3><%= t('devise.views.sessions.new') %></h3></header>
	  <div class="module_content">
			  <fieldset>
				  <%= f.label :email, t('devise.views.sessions.email_field') %>
				  <%= f.email_field :email %>
			  </fieldset>
			  <fieldset>
				  <%= f.label :password, t('devise.views.sessions.password_field') %>
				  <%= f.password_field :password %>
			  </fieldset>
        <fieldset>
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, t('devise.views.sessions.remember_me_field') %>
        </fieldset>
	  </div>
	  <footer>
		  <div class="submit_link">
        <%= link_to t('devise.views.passwords.new'), new_password_path(resource_name), :class => 'button' %>
        <%= f.submit t('devise.views.sessions.new'), :class => 'alt_btn' %>
		  </div>
	  </footer>
  <% end %>
</article>

